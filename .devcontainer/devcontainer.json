// https://containers.dev/implementors/json_reference/
{
	"name": "Round Timer",
	"service": "round-timer-node",
	"dockerComposeFile": ["../docker-compose.yml", "docker-compose.yml"],
	"workspaceFolder": "/usr/src/app",
	"forwardPorts": [4200],
	// "portsAttributes": {
	// 	"4200": {
	// 		"label": "Round Timer App",
	// 		"protocol": "https",
	// 		"onAutoForward": "notify",
	// 		"requireLocalPort": true
	// 	}
	// },
	"overrideCommand": false,
	"customizations": {
		"vscode": {
			"settings": {
				"editor.rulers": [100],
				"clipboard-manager.maxClips": 100,
				"editor.linkedEditing": true,
				"problems.showCurrentInStatus": true,
				"javascript.updateImportsOnFileMove.enabled": "always",
				"javascript.preferences.importModuleSpecifier": "non-relative",
				"typescript.updateImportsOnFileMove.enabled": "always",
				"typescript.preferences.importModuleSpecifier": "non-relative",
				"typescript.tsdk": "node_modules/typescript/lib",
				"terminal.integrated.defaultProfile.linux": "zsh",
				"eslint.format.enable": true,
				"eslint.useESLintClass": true,
				"eslint.lintTask.enable": true,
				"stylelint.reportDescriptionlessDisables": true,
				"stylelint.reportInvalidScopeDisables": true,
				"stylelint.reportNeedlessDisables": true,
				"stylelint.snippet": ["css", "scss"],
				"stylelint.validate": ["css", "scss"],
				"prettier.prettierPath": "/usr/src/app/node_modules/prettier",
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"[html]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[javascript]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[typescript]": {
					"editor.defaultFormatter": "dbaeumer.vscode-eslint"
				},
				"[css]": {
					"editor.defaultFormatter": "stylelint.vscode-stylelint"
				},
				"[scss]": {
					"editor.defaultFormatter": "stylelint.vscode-stylelint"
				},
				"todo-tree.regex.regexCaseSensitive": false,
				"todo-tree.general.statusBar": "tags",
				"todo-tree.general.tags": [" ToDo ", " FixMe "],
				"todo-tree.highlights.customHighlight": {
					" ToDo ": {
						"icon": "pin",
						"iconColour": "#dddb42",
						"type": "text",
						"foreground": "#222",
						"background": "#dddb42",
						"opacity": 100
					},
					" FixMe ": {
						"icon": "tools",
						"iconColour": "#ff4242",
						"type": "text",
						"foreground": "#eee",
						"background": "#ff4242",
						"opacity": 100
					}
				}
			},
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"editorconfig.editorconfig",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"stylelint.vscode-stylelint",
				"mrmlnc.vscode-scss",
				"christian-kohler.path-intellisense",
				"cyrilletuzi.angular-schematics",
				"angular.ng-template",
				"chamboug.js-auto-backticks",
				"usernamehw.errorlens",
				"gruntfuggly.todo-tree",
				"eamodio.gitlens",
				"streetsidesoftware.code-spell-checker",
				"tomoki1207.selectline-statusbar",
				"firefox-devtools.vscode-firefox-debug"
			]
		}
	}
}
